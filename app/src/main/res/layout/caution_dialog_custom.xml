<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_button"
        android:padding="10dp">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="백업 하기"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cancelButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_view"
            android:paddingLeft="7dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="7dp"
            android:scaleType="centerInside"
            android:src="@drawable/x_icon" />

    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:src="@drawable/caution" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:text="백업하시겠습니까?"
        android:textSize="20dp"
        android:textColor="@color/font" />

    <TextView
        android:id="@+id/subTextView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="작성한 일기를 구글 드라이브에 저장합니다."
        android:textSize="15dp"
        android:textColor="@color/font_contents" />

    <TextView
        android:id="@+id/subTextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="(단, 사진은 백업이 불가능합니다.)"
        android:textSize="13dp"
        android:textColor="@color/pastel_700" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelButton2"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:background="@drawable/button"
            android:text="취소"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:backgroundTint="@color/cardview_shadow_end_color"
            app:backgroundTintMode="add" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/okButton"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="백업하기"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:textSize="15dp"
            app:backgroundTint="@color/cardview_shadow_end_color"
            app:backgroundTintMode="add" />

    </LinearLayout>
</LinearLayout>
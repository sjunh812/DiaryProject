<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="잠금 해제"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/font" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="비밀번호를 입력해주세요"
            android:textSize="18dp"
            android:textColor="@color/font_sub" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/password_image_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/circle_light_purple" />

        <ImageView
            android:id="@+id/password_image_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/circle_light_purple" />

        <ImageView
            android:id="@+id/password_image_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/circle_light_purple" />

        <ImageView
            android:id="@+id/password_image_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circle_light_purple" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="1"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="2"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/keypad"
                android:text="3"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="4"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="5"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/keypad"
                android:text="6"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="7"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="8"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/keypad"
                android:text="9"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="45dp"
                android:background="@drawable/keypad"
                android:text="0"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/font" />

            <ImageButton
                style="@style/Widget.AppCompat.Button.Borderless"
                android:id="@+id/keypad_erase"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon_erase"
                android:background="@drawable/keypad" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
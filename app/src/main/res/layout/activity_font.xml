<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.PopupOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background"
            app:popupTheme="@style/Theme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/example_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/background_sub"
            android:padding="30dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="적용 예시"
                android:textColor="@color/font"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/exampleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:lineSpacingExtra="11dp"
                android:text="가나다라마바사아자차카타파하\n폰트적용 예시입니다~ \n오늘도 좋은 하루 되세요:)"
                android:textColor="@color/font"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/font_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottom_layout"
            android:layout_below="@id/example_layout"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/background_sub"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="폰트"
                    android:textColor="@color/font"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"
                    android:text="(총 12개)"
                    android:textColor="@color/pastel_700"
                    android:textSize="15dp" />

            </LinearLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/fontGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/systemFontButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif"
                        android:text=" 시스템서체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/basicFontButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font"
                        android:text=" THE얌전해진언니체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font1"
                        android:text=" 교보손글씨체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font2"
                        android:text=" 점꼴체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font3"
                        android:text=" 넥슨배찌체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font4"
                        android:text=" 미니콩다방체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font5"
                        android:text=" 꼬마나비체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font6"
                        android:text=" IM혜민체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font7"
                        android:text=" 타닥타닥체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font8"
                        android:text=" 쿠키런체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font9"
                        android:text=" 온글잎 만두몽키체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                    <RadioButton
                        android:id="@+id/fontButton10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/font10"
                        android:text=" 온글잎 윤우체"
                        android:textColor="@color/font"
                        android:textSize="15dp" />

                </RadioGroup>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/okButton"
                android:layout_width="72dp"
                android:layout_height="37dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button"
                android:text="저장"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="15dp"
                app:backgroundTint="@color/cardview_shadow_end_color"
                app:backgroundTintMode="add" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancelButton"
                android:layout_width="72dp"
                android:layout_height="37dp"
                android:layout_toRightOf="@+id/okButton"
                android:background="@drawable/button"
                android:text="취소"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:backgroundTint="@color/cardview_shadow_end_color"
                app:backgroundTintMode="add" />

        </RelativeLayout>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>